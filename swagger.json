{
  "openapi": "3.0.0",
  "info": { "title": "URL Shortener API", "version": "1.0.0" },
  "servers": [{ "url": "http://localhost:8080" }],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "test@example.com" },
                  "password": { "type": "string", "example": "pass123" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "email": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "test@example.com" },
                  "password": { "type": "string", "example": "pass123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" },
                    "user": { "type": "object", "properties": { "id": { "type": "string" }, "email": { "type": "string" } } }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/shorten": {
      "post": {
        "summary": "Create short URL",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "longUrl": { "type": "string", "example": "https://google.com" },
                  "customCode": { "type": "string", "example": "abc123" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "shortUrl": { "type": "string", "example": "http://localhost:8080/abc123" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
